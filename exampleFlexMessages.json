[
    {
        "type": "flex",
        "altText": "You received a message",
        "contents": {
            "type": "bubble",
            "body": {
                "type": "box",
                "layout": "vertical",
                "contents": [
                    {
                        "type": "box",
                        "layout": "horizontal",
                        "contents": [
                            {
                                "type": "image",
                                "url": "https://scdn.line-apps.com/n/channel_devcenter/img/flexsnapshot/clip/clip7.jpg",
                                "size": "5xl",
                                "aspectMode": "cover",
                                "aspectRatio": "150:196",
                                "gravity": "center",
                                "flex": 1
                            },
                            {
                                "type": "box",
                                "layout": "vertical",
                                "contents": [
                                    {
                                        "type": "image",
                                        "url": "https://scdn.line-apps.com/n/channel_devcenter/img/flexsnapshot/clip/clip8.jpg",
                                        "size": "full",
                                        "aspectMode": "cover",
                                        "aspectRatio": "150:98",
                                        "gravity": "center"
                                    },
                                    {
                                        "type": "image",
                                        "url": "https://scdn.line-apps.com/n/channel_devcenter/img/flexsnapshot/clip/clip9.jpg",
                                        "size": "full",
                                        "aspectMode": "cover",
                                        "aspectRatio": "150:98",
                                        "gravity": "center"
                                    }
                                ],
                                "flex": 1
                            }
                        ]
                    },
                    {
                        "type": "box",
                        "layout": "horizontal",
                        "contents": [
                            {
                                "type": "box",
                                "layout": "vertical",
                                "contents": [
                                    {
                                        "type": "image",
                                        "url": "{{profile.pictureUrl}}",
                                        "aspectMode": "cover",
                                        "size": "full"
                                    }
                                ],
                                "cornerRadius": "100px",
                                "width": "72px",
                                "height": "72px"
                            },
                            {
                                "type": "box",
                                "layout": "vertical",
                                "contents": [
                                    {
                                        "type": "text",
                                        "contents": [
                                            {
                                                "type": "span",
                                                "text": "{{profile.displayName}}",
                                                "weight": "bold",
                                                "color": "#000000"
                                            }
                                        ],
                                        "size": "sm",
                                        "wrap": true
                                    },
                                    {
                                        "type": "text",
                                        "text": "{{profile.statusMessage}}",
                                        "color": "#666666",
                                        "wrap": true
                                    },
                                    {
                                        "type": "box",
                                        "layout": "baseline",
                                        "contents": [
                                            {
                                                "type": "text",
                                                "text": "1,140,753 Like",
                                                "size": "sm",
                                                "color": "#bcbcbc"
                                            }
                                        ],
                                        "spacing": "sm",
                                        "margin": "md"
                                    }
                                ]
                            }
                        ],
                        "spacing": "xl",
                        "paddingAll": "20px"
                    },
                    {
                        "type": "button",
                        "action": {
                            "type": "uri",
                            "label": "Share",
                            "uri": "{{shareThis}}"
                        },
                        "height": "sm"
                    }
                ],
                "paddingAll": "0px"
            }
        }
    }
]